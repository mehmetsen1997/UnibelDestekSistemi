<div class="searchConditionDiv" id="departmentSearchDiv">
    <div class="row">
        <div class="col-md-12" action="/advancedsearch" method="post">

            <div class="row p-3">
                <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8 col-xs-12 mx-auto">
                    <label for="selectionDepartment" style="font-size:14px;">Department list:</label>
                    <select class="form-control" id="selectionDepartment" name="department" style="font-size:16px;" onchange="selectionOfDepartment()">
                        <option selected disabled>-- Select Department --</option>
                        @foreach (var department in ViewBag.department)
                        {
                            <option value="@department.DepartmanId">@department.DepartmanAdi</option>
                        }
                    </select>

                </div>
            </div>
            <div class="row p-3">
                <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8 col-xs-12 mx-auto">
                    <h4>Added Departments</h4>
                    <div class="card">
                        <div class="card-body">
                            <ul id="selectedDepartmentList" style="padding:0 0 0 10px;list-style-type:disc;padding:10px;font-size:16px;"></ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row p-3">
                <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8 col-xs-12 mx-auto">
                    <div class="col-md-4 col-sm-4 col-xs-4 col-xl-4">
                        <label for="startDate" style="font-size:16px;">Start Date</label>
                        <input class="form-control-lg ml-3" id="searchByDepartmentStartDate" type="date" name="startDate" />
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-4 col-xl-4">
                        <label for="endDate" style="font-size:16px;">End Date</label>
                        <input class="form-control-lg ml-3" id="searchByDepartmentEndDate" type="date" name="endDate" />
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-4 col-xl-4">
                        <button class="btn btn-block btn-success btn-lg " type="button" name="searchByDepartment" onclick="sendSearchConditions()"><i class="fas fa-search mr-2"></i>Search</button>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <hr />
</div>