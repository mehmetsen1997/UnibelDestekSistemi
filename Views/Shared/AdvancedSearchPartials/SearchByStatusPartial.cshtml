<div class="searchConditionDiv" id="statusSearchDiv">
    <div class="row">
        <div class="col-md-12" >

            <div class="row p-3">
                <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8 col-xs-12 mx-auto">
                    <label for="selectionStatus" style="font-size:14px;">Status list:</label>
                    <select class="form-control" id="selectionStatus" name="department" style="font-size:16px;" onchange="selectionOfStatus()">
                        <option selected disabled>-- Select Status --</option>
                        @foreach (var status in ViewBag.status)
                        {
                            <option value="@status.DurumId">@status.DurumAdi</option>
                        }

                    </select>

                </div>
            </div>
            <div class="row p-3">
                <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8 col-xs-12 mx-auto">
                    <h4>Added Status</h4>
                    <div class="card">
                        <div class="card-body">
                            <ul id="selectedStatusList" style="padding:0 0 0 10px;list-style-type:disc;padding:10px;font-size:16px;"></ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row p-3">
                <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8 col-xs-12 mx-auto">
                    <div class="col-md-4 col-sm-4 col-xs-4 col-xl-4">
                        <label for="startDate" style="font-size:16px;">Start Date</label>
                        <input class="form-control-lg ml-3" id="searchByStatusStartDate" type="date" name="startDate" />
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-4 col-xl-4">
                        <label for="endDate" style="font-size:16px;">End Date</label>
                        <input class="form-control-lg ml-3" id="searchByStatusEndDate" type="date" name="endDate" />
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-4 col-xl-4 h-100">
                        <button class="btn btn-block btn-success btn-lg " type="button" name="searchByStatus" onclick="sendSearchConditions()"><i class="fas fa-search mr-2"></i>Search</button>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <hr />
</div>