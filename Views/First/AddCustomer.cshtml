@using UnibelDestekSistemi.Models.DBHandler
@model UnibelDestekSistemi.Models.ViewModels.AddCustomerViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name="~/Views/Shared/MenuBarPartials/HeaderPartial.cshtml" />
           
            <form asp-action="AddCustomer" asp-controller="First" method="post" class="row">
                <div class="form-group col-sm-6">
                    @if (ViewBag.KullaniciDurumu != null)
                    {
                        <h4> @ViewBag.KullaniciDurumu </h4>
                    }
                    <label class="labelTicketModal" for="staffName">Name :</label>
                    <input type="text" class="form-control modalInputs" id="staffName" name="staffFullName" />

                    <label class="labelTicketModal" for="staffSurname">Username* :</label><br /><span asp-validation-for="staffUsername"></span>
                    <input type="text" class="form-control modalInputs" id="staffSurname" name="staffUsername" />

                    <label class="labelTicketModal" for="staffUsername">Password* :</label><br /><span asp-validation-for="staffPassword"></span>
                    <input type="password" class="form-control modalInputs" id="staffUsername" name="staffPassword" />

                    <label class="labelTicketModal" for="staffEmail">E-Mail* :</label><br /><span asp-validation-for="staffEmail"></span>
                    <input type="email" class="form-control modalInputs" id="staffEmail" name="staffEmail" />

                    <label class="labelTicketModal" for="selectDepartment">Company* : </label><br />
                    @if (ViewBag.selectSirket != null)
                    {
                        @ViewBag.selectSirket;
                    }
                    <select class="form-control modalInputs" id="selectDepartment" name="selectSirket">
                        <option disabled selected value=""> -- Şirket Seçiniz -- </option>

                        @for (int i = 1; i < ViewBag.Sirketler.Count; i++)
                        {
                            <option value="@ViewBag.Sirketler[i].SirketId">@ViewBag.Sirketler[i].SirketAdi</option> 
                        }
                    </select>
            
                    <button type="submit" class="btn btn-primary btn-lg">Ekle</button>
                </div>
            </form>

      


